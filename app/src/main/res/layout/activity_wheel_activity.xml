<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"

              android:orientation="vertical">

    <com.aigestudio.wheelpicker.view.WheelStraightPicker
        android:id="@+id/main_wheel_straight"
        wheel_text_color="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2D33"
        aigestudio:wheel_item_count="5"
        aigestudio:wheel_item_space="25dp"
        aigestudio:wheel_text_color="#FFF"
        aigestudio:wheel_text_color_current="#f96262"/>

    <com.example.administrator.mytext.weight.DrawHookView
        android:id="@+id/hookview"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"/>

</LinearLayout>